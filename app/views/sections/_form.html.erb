<%= semantic_form_for @section, action: '/sections', method: 'POST', remote: true do |section| %>
  <%= section.hidden_field :form , value: @form %>
  <div class="form-group">
    <%= section.label "name", "Name" %>
    <%= section.text_field :name , class: "form-control", placeholder: "Please enter the Name of the section" %>
  </div>
  <div class="form-group">
    <%= section.label "description", "Description" %>
    <%= section.text_area "description", class: "form-control", placeholder: "Please enter the Description of the section" %>
  </div>
  <div class="form-group">
    <ul class="list-group" id="question-content">
      <%= section.semantic_fields_for :questions do |question| %>
        <%= render "question_fields", f: question %>
      <% end %>
    </ul>
    <%= link_to_add_association 'Add question', section, :questions %>

  </div>


  <div id="question-content"></div>
  <%= button_tag "Submit", class: "mt-3 btn btn-primary ", id: "new-section-submit" do %>
    Save Section <i class="fas fa-arrow-right"></i>
  <% end %>
  <hr>
<% end %>