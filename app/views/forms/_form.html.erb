<div class="container">
  <%= form_with model: form, action: '/forms', remote: true, data: {'new-form' => true} do |form| %>
    <div class="form-group">
      <%= label_tag "name", "Name" %>
      <%= form.text_field "name", class: "form-control", placeholder: "Please enter the Name of the form" %>
    </div>
    <div class="form-group">
      <%= label_tag "description", "Description" %>
      <%= form.text_area "description", class: "form-control", placeholder: "Please enter the Description of the form" %>
    </div>
    <div class="form-group">
      <%= label_tag "attempts_number", "Attempt Number" %>
      <%= form.text_field "attempts_number", class: "form-control", placeholder: "Please enter the Attempts Number of the form", min: 1, step: 1, value: 1 %>
    </div>
    <%= button_tag "Submit", class: "btn btn-primary btn-lg btn-block", id: "new-form-submit" do %>
      Submit <i class="fas fa-arrow-right"></i>
    <% end %>
  <% end %>
</div>
